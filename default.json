{
  "extends": [
    "config:base",
    "schedule:nonOfficeHours"
  ],
  "timezone": "Canada/Eastern",
  "postUpdateOptions": [ "gomodTidy" ],
  "packageRules": [
    {
      "packagePatterns": [ "^golang.org/x/" ],
      "groupName": "sub-repository packages",
      "schedule": [ "every weekend" ]
    },
    {
      "packageNames": [ "github.com/aws/aws-sdk-go" ],
      "schedule": [ "every weekend" ]
    }
  ]
}
